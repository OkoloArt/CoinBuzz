<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_toLeftOf="@id/exchange_price_usd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/exchange_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bitcoin" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/exchange_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/exchange_pairs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999 pr" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/exchange_indicator"
                android:layout_width="18dp"
                android:layout_height="30dp"
                app:srcCompat="@mipmap/arrow_up" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/exchange_volume"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0.33%" />

        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/exchange_price_usd"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_height="60dp"
        android:text="$22,807.63" />
</RelativeLayout>