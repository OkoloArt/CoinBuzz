<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/exchange_layout"
        android:layout_width="match_parent"
        android:layout_marginEnd="@dimen/dp_3"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_3"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/exchange_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                app:fontFamily="@font/roboto_condensed_regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bitcoin" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/exchange_price_usd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="$22,807.63"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                app:fontFamily="@font/roboto_condensed_regular" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/exchange_rank"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                app:fontFamily="@font/oswald_regular"
                android:paddingEnd="@dimen/dp_8"
                android:paddingStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginStart="@dimen/dp_5"
                android:textColor="@color/md_grey_600"
                android:background="@drawable/rank_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/exchange_pairs"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dp_2"
                android:layout_marginStart="@dimen/dp_5"
                android:textColor="@color/md_grey_600"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                app:fontFamily="@font/oswald_regular"
                android:layout_height="wrap_content"
                android:text="999 pr" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/exchange_indicator"
                android:layout_width="22dp"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_height="@dimen/dp_30"
                app:srcCompat="@mipmap/arrow_up" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/exchange_volume"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dp_2"
                android:textColor="@color/md_grey_600"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                app:fontFamily="@font/oswald_regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0.33%" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dp_2"
                android:layout_marginStart="@dimen/dp_5"
                android:textColor="@color/md_grey_600"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                app:fontFamily="@font/oswald_regular"
                android:text="V(Usd" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_below="@id/exchange_layout"
        style="@style/Divider"
        android:id="@+id/view"
        android:layout_marginTop="@dimen/dp_4"
        android:alpha="0.2"
        android:background="@color/platinum_grey" />
</RelativeLayout>